<div class="container">
  <h1>Edit Your Listing Here</h1>
  <%= simple_form_for(@item, html: { class: "form-horizontal" }) do |f| %>
    <div class="form-group">
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.input_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.input_field :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :price, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.input_field :price, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :location, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.input_field :location, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :date_available_from, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.input_field :date_available_from, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :date_available_until, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.input_field :date_available_until, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :photos, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.input_field :photos, as: :file, class: "form-control", multiple: true %>
        <% if @item.photos.attached? %>
          <% @item.photos.each do |ph| %>
            <%= f.hidden_field :photos, multiple: true, value: ph.signed_id %>
          <% end %>
        <% end %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Save Changes", class: "btn btn-primary" %>
        <%= link_to "Back to Item", item_path(@item), class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>
